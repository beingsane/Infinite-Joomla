<?xml version="1.0" encoding="utf-8"?>
<install version="1.5"
         type="plugin"
         group="system"
         method="upgrade">
	<name>System - Infinite Joomla</name>
	<version>0.1</version>
	<creationDate>May 20, 2013</creationDate>
	<author>Matt Thomas</author>
	<authorEmail>matt@betweenbrain.com</authorEmail>
	<authorUrl>http://www.betweenbrain.com</authorUrl>
	<license>GNU General Public License version 2 or later</license>
	<copyright>Copyright (C) 2013 betweenbrain llc. All rights reserved.</copyright>
	<description>Joomla Ajax Session Plugin</description>

	<files>
		<filename plugin="infinitejoomla">infinitejoomla.php</filename>
	</files>

	<media destination="js">
		<file>jquery.infinitescroll.min.js</file>
		<file>index.html</file>
	</media>

	<params>
		<param name="mode"
		       type="list"
		       default="k2"
		       label="Plugin Mode"
		       description="">
			<option value="k2">K2</option>
		</param>
	</params>

</install>